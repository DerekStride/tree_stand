#!/usr/bin/env ruby

require "bundler/setup"
require "tree_stand"

TreeStand.configure do
  config.parser_path = File.expand_path(
    File.join(__dir__, "..", "parsers")
  )
end

ivars_to_add = <<~RUBY
  @parser = TreeStand::Parser.new("math")
  @tree = @parser.parse_string(nil, "1 + x")
RUBY

eval(ivars_to_add)
puts("available ivars:")
puts(ivars_to_add)

require "pry"
Pry.start
